{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "declaration": true,
    "module": "NodeNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "jest",
      "express"
    ],
    "baseUrl": "."
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}