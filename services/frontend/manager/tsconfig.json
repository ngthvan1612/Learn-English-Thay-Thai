{
  "compilerOptions": {
    "outDir": "./build",
    "target": "ES2020",
    "declaration": true,
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "."
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}